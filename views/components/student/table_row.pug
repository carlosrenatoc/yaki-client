tr
    td= student.fl_name
    td= student.age
    td= student.email
    td= student.current_belt
    td
        .btn-group
            a.btn.btn-primary(href=urlBase+"/students/view/"+student._id)= __('View')
            button#dropdownSubMenuActions.btn.btn-primary.dropdown-toggle.dropdown-icon(type='button', data-toggle='dropdown')
                span.sr-only Toggle Dropdown
            .dropdown-menu(role='menu', aria-labelledby="dropdownSubMenuActions")
                a.dropdown-item(href=urlBase+"/students/delete/"+student._id)= __('Delete')
